<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="improvement_suggestion_view_form" model="ir.ui.view">
        <field name="name">improvement_suggestion.view.form</field>
        <field name="model">improvement.suggestion</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="action_add" string="Add" type="object" class="oe_highlight"
                                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                                        attrs="{'invisible': [('state', '!=', 'add')]}"/>
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight"
                                        attrs="{'invisible': [('state', '!=', 'add')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,close"/>
                </header>
                <sheet>
                    <div>
                        <h1 class="text-center" style="color:#714B67">
                            IMPROVEMENT SUGGESTION FORM
                        </h1>
                    </div>
                    <!-- <group> -->
                    <group string="EMPLOYEE RELATED INFORMATION">
                        <group>
                            <field name="doc_no" readonly="1" force_save="1"/>
                            <field name="issue_date" readonly="1" force_save="1"/>
                            <field name="employee_id" required="1"/>
                            <field name="employee_email" />
                            <field name="bu_br_id" />
                            <field name="department_id" />
                        </group>
                        <group>
                            <field name="facilitator_id" required="1"/>
                            <field name="facilitator_email" />
                            <field name="dep_head_id" required="1"/>
                            <field name="dep_head_email" />
                        </group>
                    </group>

                    <group>
                        <field name="improvement_them" />
                        <field name="current_condition" />
                        <field name="improvement_suggestion" />
                    </group>
                    
                    <group string="CHOOSE THE IMPROVEMENT SUGGESTION OBJECTIVE">
                        <group string="SQCDM Objective ">
                            <field name="safety_healthy" />
                            <field name="quallity" />
                            <field name="cost_budget" />
                            <field name="delivery" />
                            <field name="morality" />
                        </group>
                        <group string="4M+EI Objective">
                            <field name="man_people" />
                            <field name="machine_equipment" />
                            <field name="method_process" />
                            <field name="material_parts" />
                            <field name="environment" />
                            <field name="information" />
                        </group>
                        <group string="5S Objective">
                            <field name="sort" />
                            <field name="set_in" />
                            <field name="shine" />
                            <field name="standardize" />
                            <field name="sustain" />
                        </group>  
                    </group>
                    <group string="IMPROVEMENT SCOPE">
                        <field name="improvement_scope" widget="radio" options="{'horizontal':true}"/>
                    </group>
                    
                    <group string="VISUAL CONDITION ">
                        <group >
                            <field name="before_improvement" widget="image"/>
                        </group>
                        <group >
                            <field name="after_improvement" widget="image"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="deliverables" />
                    </group>
                    <group>
                        <field name="next_improvement_plan" />
                    </group>
                    
                    <group>
                        <field name="create_id" readonly="1" force_save="1"/>
                        <field name="create_date"  readonly="1" force_save="1"/>
                    </group>
                           
                    <!-- </group> -->
                </sheet>
            </form>
        </field>
    </record>

    <record id="improvement_suggestion_view_tree" model="ir.ui.view">
        <field name="name">improvement_suggestion.view.tree</field>
        <field name="model">improvement.suggestion</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="doc_no" />
                <field name="issue_date" />
                <field name="employee_id" />
                <field name="employee_email" />
                <field name="bu_br_id" />
                <field name="department_id" />
                <field name="improvement_them" />
            </tree>
        </field>
    </record>
    <record id="improvement_suggestion_view_search" model="ir.ui.view">
        <field name="name">improvement_suggestion.view.search</field>
        <field name="model">improvement.suggestion</field>
        <field name="arch" type="xml">
            <search string="Improvement Suggestion">
                <field name="employee_id" />
                <field name="bu_br_id" />
                <field name="department_id" />
                <group expand="0" string="Group By">
                    <filter name="department_id" string="Department" domain="[]" context="{'group_by': 'department_id'}" />
                    <filter name="bu_br_id" string="Business Unit" domain="[]" context="{'group_by': 'bu_br_id'}" />
                </group>
                
            </search>
        </field>
    </record>

    <record id="improvement_suggestion_action" model="ir.actions.act_window">
        <field name="name">Improvement Suggestion</field>
        <field name="res_model">improvement.suggestion</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your First Improvement Suggestion!</p>
        </field>
    </record>
    <menuitem
        id="improvement_suggestion_menu"
        name="Improvement Suggestion" action="improvement_suggestion_action"
        sequence="10"/>
    
</odoo>
